.sprite:before {
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    background: {
        image: url({{{options.path}}});
        repeat: no-repeat;
    }
}

{{#items}}
.sprite.sprite-{{name}}:before {
    background-position: {{px.offset_x}} {{px.offset_y}};
    background-size: {{total_width}} {{total_height}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/items}}
